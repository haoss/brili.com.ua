mixin catalogBlock(title, price, state, favorite, img, city)
  .catalog__block
    .catalog__block-img
      a(href="product.html")
      if img
        img(src= img, alt="")
      else
        img(src="./img/catalog/catalog-no-photo.png", alt= title)
    .catalog__block-content
      .catalog__block-labels
        if favorite
          div
            a(href="#!").add__favorites
              +iconHeart
        if state
          div
            .catalog__block-state= state
      .catalog__block-title
        a(href="product.html")= title
      
      if price
        .catalog__block-price
          strong= price 
          |  грн.
      if city
        .catalog__block-city= city

