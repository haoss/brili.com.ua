doctype

html(lang="ru")
  
  -var active = 'Сообщение' //активный пункт меню, список в header.jade
  -var pageTitle = 'Сообщение' + ' - Brilicom' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    .base
      include ./_include/_header
      
      .content.no--p-top
        .container-fluid
          
          .content__separator.content__separator--thin
            
          .content__head.content__head--back
            div
              a(href="message.html").btn.btn--default.btn--f16
                +iconArrowLeft2
                | Назад
            div
              a(href="#!").btn.btn--default
                +iconStar 
              a(href="#!").btn.btn--default
                +iconStop
              a(href="#!").btn.btn--default
                +iconTrash
          
          .content__separator.no--m-bottom
          .account__list
            ul.no--m-bottom
              li
                a(href="#!").no--border Продам бриллиант 0,6 карратов
                  +iconArrowRight2
          .content__separator
          .message__comments
            .message__comments-question
              .message__comments-title Ваше сообщение
              .message__comments-date 6 мая, 13:12
              .clear
              .message__comments-text Добрый день. Я бы купил за 5 тыс.
              .message__comments-date Прочитано 6 мая
            .message__comments-answer
              .message__comments-title Николай
              .message__comments-date 6 мая, 13:12
              .clear
              .message__comments-text Добрый день. 6500 грн
          .message__document-form
            textarea(placeholder="Текст сообщения")
            a(href="#!").link 
              +iconAttache
              span 1
            button(type="submit") Отправить
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")
    
