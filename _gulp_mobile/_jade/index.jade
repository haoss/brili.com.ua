doctype

html(lang="ru")
  
  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная' + ' - Brilicom' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    .base
      include ./_include/_header
      
      .content
        .container-fluid
          
          a(href="add-advert.html").btn.btn--color.btn--block.btn--center добавить объявление
          
          .catalog
            .catalog__wrapper
              .catalog__head
                div.no--border
                  a(href="#catalog")
