              +catalogBlock('Часы Fossil', '2 200', 'новое', true, './img/catalog/catalog-21.png')
                        
          .content__separator
          
          +contentSeo 
        
        #catalog.filter.modal
          form(action="#!")
            .filter__wrapper
              .filter__head
                div
                  a(href="#!").filter__head-btn.filter__head-btn--close Закрыть
              .filter__head-separator
              .filter__body
                
                .filter__body-wrapper
                  .filter__block.no--border.no--p-bottom
                    ul
                      li.filter__block-li: a(href="catalog.html")
                        img(src="./img/category/category-1.svg", alt="")
                        span Бриллианты
                      li.filter__block-li: a(href="catalog.html")
