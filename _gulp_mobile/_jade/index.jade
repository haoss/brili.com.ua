                    +iconFilter
            
            .catalog__wrapper
              
              +catalogBlock('Бриллиант 0,53 карата (3/7) НЕЛЕЧЕННЫЙ!!!', '7 950', 'б/у', true, './img/catalog/catalog-11-6.png')
