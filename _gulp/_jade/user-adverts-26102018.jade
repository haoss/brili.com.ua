doctype

html(lang="ru")
  
  -var active = 'Справочник фирм' //активный пункт меню, список в header.jade
  -var pageTitle = 'Справочник фирм' + ' - Brilicom' //title страницы для генерации верстки  
  -var header = 'profile 0'

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        .content__wrapper
          
          .breadcrumbs.breadcrumbs--document
            ul
              li: a(href="index.html") Главная
              li: span Другие объявления пользователя
          
          .row
            .row__col-3
              
              .content__row-left
                
                .product__profile
                  .product__profile-icon
                    img(src="./img/icons/icon-user.svg", alt="")
                  .product__profile-title Людмила
                  .product__profile-date На BRILI с сентября 2017
                
                .product__about-btn
                  .product__phone
                    +iconPhone
                    span(data-phone="063 555 55 55") 06x xxx xx xx
                    a(href="#!") показать
                  a(href="#!").btn.btn--color
                    +iconMail
                    | Написать автору
                
              
            .row__col-9
              
              .content__row-center
                
                .content__head
                  .h1 Объявления пользователя
              
                .sorting
                  div
                    span.sorting__span Сортировать:
                  div
                    a(href="#!").sorting__link.is-active дешевые
                  div
                    a(href="#!").sorting__link дорогие
                  div
                    a(href="#!").sorting__link популярные
              
                .catalog.no--p
                  .catalog__wrapper.catalog__wrapper--row4
                    +catalogBlock('Кольцо с бриллиантами', false, false, '10 000 грн.', false, false, false)
                    +catalogBlock('Серебрянные Шармы Пандора, S925', './img/catalog/catalog-13.png', false, '7 999 грн.', false, false, false)
                    +catalogBlock('Pandora браслет,оригинал', './img/catalog/catalog-14.png', false, '11 000 грн.', false, false, false)
                    +catalogBlock('Бриллиант', false, false, '1 грн.', false, false, false)

    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    //- script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
