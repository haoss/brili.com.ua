doctype

html(lang="ru")
  
  -var active = 'Восстановление пароля' //активный пункт меню, список в header.jade
  -var pageTitle = 'Восстановление пароля' + ' - Brilicom' //title страницы для генерации верстки  
  -var header = 'profile 1'

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        
        // Восстановление пароля
        .content__profile
          .content__profile-head
            ul.nav-tab.nav-tab--once
              li(role='presentation')
                span Восстановление пароля

          .content__profile-wrapper
            .tab-content
              .tab-pane.active
                form(method="post", action="#!")
                  .form-group
                    label Email или номер телефона
                    input(type="text", placeholder="").form-control
                  .form-group.form-group--password.hidden
                    label Новый пароль
                    input(type="password", placeholder="").form-control
                    button(type="button")
                  .text-center.hidden
                    button(type="button").btn Восстановить
                    
        // Восстановление пароля
        .content__profile
          .content__profile-head
            ul.nav-tab.nav-tab--once
              li(role='presentation')
                span Восстановление пароля

          .content__profile-wrapper
            .tab-content
              .tab-pane.active
                form(method="post", action="#!")
                  .form-group
                    label Email или номер телефона
                    input(type="text", placeholder="" value="test25367@test.com.ua").form-control
                  .form-group.form-group--password
                    label Новый пароль
                    input(type="password", placeholder="").form-control
                    button(type="button")
                  .text-center
                    button(type="button").btn Восстановить
                    
        // Активация пароля
        .content__profile
          .content__profile-head
            ul.nav-tab.nav-tab--once
              li(role='presentation')
                span Теперь вы должны активировать 
                  br
                  | свой новый пароль!

          .content__profile-wrapper
            .tab-content
              .tab-pane.active.text-center
                p Нажмите на ссылку, которую мы только что отправили 
                  br
                  | на ваш 
                  strong test25367@test.com.ua
                a(href="#!").btn проверить e-mail
                
                .clear36
                .content__profile-back Назад на 
                  a(href="index.html") главную страницу
                  
        // Пароль создан
        .content__profile
          .content__profile-head
            ul.nav-tab.nav-tab--once
              li(role='presentation')
                span Пароль успешно создан

          .content__profile-wrapper
            .tab-content
              .tab-pane.active.text-center
                p Просмотреть 
                  a(href="settings.html") Мой профиль
                p.no--m Назад на 
                  a(href="enter-to-profile.html") главную страницу
          
          
    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    //- script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
